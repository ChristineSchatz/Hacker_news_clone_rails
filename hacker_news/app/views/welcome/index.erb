
<% @posts.each_with_index do |post, i| %>
  <div><%= "#{i+1}. " %><%= link_to (post.title),  post_path(post.id) %>  (<%= find_user(post)%>) votes: <span id="vote_area"><%= post.votes %></span><form action="/post/<%= post.id %>/up_vote" method="POST">
    <input type="submit" class="vote_count" value="Up Vote!">
  </form>
  <span class="small"><%= post.created_at %></span>
<% end %>

